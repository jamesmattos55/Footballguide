<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.PlayerStatsFragment">

  <android.support.design.widget.TextInputLayout
    android:id="@+id/player_search_container"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:hintEnabled="true"
    app:hintAnimationEnabled="true">

    <android.support.design.widget.TextInputEditText
      android:id="@+id/player_search"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:textSize="15sp"
      android:hint="Search for a Player"/>

  </android.support.design.widget.TextInputLayout>

  <Button
    android:id="@+id/search_button"
    android:background="@drawable/ic_search_black"
    android:layout_width="40dp"
    android:layout_height="40dp"
    app:layout_constraintTop_toBottomOf="@+id/player_search_container"

    />

  <TextView
    android:id="@+id/playerStatsHeader"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/player_stats_header"/>


</android.support.constraint.ConstraintLayout>